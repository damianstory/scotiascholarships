{
  "name": "scotiabank-scholarships",
  "private": true,
  "workspaces": ["packages/*", "apps/*", "tooling/*"],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --filter=@v1/app",
    "start": "turbo start --filter=@v1/app",
    "format": "biome format --write .",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "turbo": "2.1.1",
    "typescript": "^5.5.4"
  },
  "packageManager": "bun@1.1.26"
}
